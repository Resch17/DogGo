@model DogGo.Models.ViewModels.CreateWalkFormViewModel

@{
    ViewData["Title"] = "Create Walks";
}

<h1>Create Walks</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateWalks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Walk.WalkerId" class="control-label">Walker</label>
                <select asp-for="Walk.WalkerId" class="form-control">
                    <option value="">Select Walker</option>
                    @foreach (Walker walker in Model.Walkers)
                    {
                        <option value="@walker.Id">@walker.Name</option>
                    }
                </select>
                <span asp-validation-for="Walk.WalkerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Walk.Date" class="control-label">Date</label>
                <input asp-for="Walk.Date" class="form-control" type="date" value=@DateTime.Now />
                <span asp-validation-for="Walk.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Walk.Duration" class="control-label">Duration (in seconds)</label>
                <input asp-for="Walk.Duration" class="form-control" type="text" />
                <span asp-validation-for="Walk.Duration" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <label asp-for="DogIds" class="control-label">Dog(s)</label>
                <select asp-for="DogIds" class="form-control">
                    @foreach (Dog dog in Model.Dogs)
                    {
                        <option value="@dog.Id">@dog.Name</option>
                    }
                </select>
                <span asp-validation-for="DogIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateWalks" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
